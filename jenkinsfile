// Déclaration des variables d'images pour qu'elles soient visibles dans toutes les stages
def dockerImageServer
def dockerImageClient

pipeline {
    agent any

    // Déclencheur : poll SCM toutes les 5 minutes
    triggers {
        pollSCM('H/5 * * * *')
    }

    environment {
        // ID des credentials Docker Hub configurés dans Jenkins (Credentials → ID = "dockerhub")
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-creds')

        // Noms d'images sur Docker Hub (à adapter avec ton vrai username)
        IMAGE_NAME_SERVER = 'zaynebsakh/mern-server'
        IMAGE_NAME_CLIENT = 'zaynebsakh/mern-client'
    }

    stages {
        stage('Checkout') {
    steps {
        // Réutilise le code déjà cloné par "Declarative: Checkout SCM"
        checkout scm
    }
}


        stage('Build Server Image') {
            steps {
                dir('server') {
                    script {
                        dockerImageServer = docker.build("${IMAGE_NAME_SERVER}")
                    }
                }
            }
        }

        stage('Build Client Image') {
            steps {
                dir('client') {
                    script {
                        dockerImageClient = docker.build("${IMAGE_NAME_CLIENT}")
                    }
                }
            }
        }

        stage('Scan Server Image') {
            steps {
                script {
                    sh """
                    docker run --rm -v /var/run/docker.sock:/var/run/docker.sock \
                        aquasec/trivy:latest image --exit-code 0 \
                        --severity LOW,MEDIUM,HIGH,CRITICAL \
                        ${IMAGE_NAME_SERVER}
                    """
                }
            }
        }

        stage('Scan Client Image') {
            steps {
                script {
                    sh """
                    docker run --rm -v /var/run/docker.sock:/var/run/docker.sock \
                        aquasec/trivy:latest image --exit-code 0 \
                        --severity LOW,MEDIUM,HIGH,CRITICAL \
                        ${IMAGE_NAME_CLIENT}
                    """
                }
            }
        }

        stage('Push Images to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('', DOCKERHUB_CREDENTIALS) {
                        dockerImageServer.push()
                        dockerImageClient.push()
                    }
                }
            }
        }
    }
}
